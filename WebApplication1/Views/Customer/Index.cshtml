@model IEnumerable<WebApplication1.Models.tblCustomers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddCustomer">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gender)
            </th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Dated.ToString("dd MMM yyyy")
             </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_name)
                </td>
                <td>
             
                    @if(item.gender== true)
                    {
                        <p>Male</p>
                    }
                    else
                    {
                        <p>Female</p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Update", "UpdateCustomer", "Customer", new {  id=item.Customer_id  }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Customer_id  })
                </td>
            </tr>
        }
    </tbody>
</table>
