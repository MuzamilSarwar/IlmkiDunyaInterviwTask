                <label asp-for="City_id" class="control-label"></label>
@*                <input asp-for="City_id" class="form-control" />
*@                <select name="City_id" class="form-control" asp-items="@ViewBag.Cities" required>
                </select>
                <span asp-validation-for="City_id" class="text-danger"></span>          
